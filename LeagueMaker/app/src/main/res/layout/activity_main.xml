<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keith.leaguemaker.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainTitle"
        android:text="League Maker"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Leagues"
        android:textSize="32sp"
        android:id="@+id/leaguesbutton"
        android:layout_below="@+id/mainTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:background="@color/greenButtonBackground" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Teams"
        android:textSize="32sp"
        android:id="@+id/teamsbutton"
        android:layout_below="@+id/leaguesbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@color/pinkButtonBackground"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Results"
        android:textSize="32sp"
        android:id="@+id/resultsbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@color/blueButtonBackground"/>
</RelativeLayout>
